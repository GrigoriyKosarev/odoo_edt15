<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>

        <!-- ===== TREE VIEW (Список) ===== -->
        <record id="library_book_view_tree" model="ir.ui.view">
            <field name="name">library.book.tree</field>
            <field name="model">library.book</field>
            <field name="arch" type="xml">
                <tree>
                    <field name="name"/>
                    <field name="publish_date"/>
                    <field name="pages"/>
                    <field name="price"/>
                    <field name="state" widget="badge"
                           decoration-success="state == 'available'"
                           decoration-warning="state == 'borrowed'"
                           decoration-info="state == 'draft'"/>
                    <field name="available"/>
                </tree>
            </field>
        </record>

        <!-- ===== FORM VIEW (Форма) ===== -->
        <record id="library_book_view_form" model="ir.ui.view">
            <field name="name">library.book.form</field>
            <field name="model">library.book</field>
            <field name="arch" type="xml">
                <form>
                    <!-- Кнопки зверху форми -->
                    <header>
                        <button name="action_borrow"
                                string="Видати"
                                type="object"
                                class="btn-primary"
                                attrs="{'invisible': [('state', '!=', 'available')]}"/>
                        <button name="action_return"
                                string="Повернути"
                                type="object"
                                class="btn-success"
                                attrs="{'invisible': [('state', '!=', 'borrowed')]}"/>
                        <field name="state" widget="statusbar"
                               statusbar_visible="draft,available,borrowed"/>
                    </header>

                    <sheet>
                        <!-- Назва великими літерами -->
                        <div class="oe_title">
                            <h1>
                                <field name="name" placeholder="Назва книги"/>
                            </h1>
                        </div>

                        <!-- Групи полів -->
                        <group>
                            <group string="Основна інформація">
                                <field name="publish_date"/>
                                <field name="pages"/>
                                <field name="price"/>
                            </group>
                            <group string="Статус">
                                <field name="available"/>
                                <field name="is_old"/>
                            </group>
                        </group>

                        <!-- Закладки -->
                        <notebook>
                            <page string="Опис">
                                <field name="description" placeholder="Опис книги..."/>
                            </page>
                        </notebook>
                    </sheet>
                </form>
            </field>
        </record>

        <!-- ===== SEARCH VIEW (Пошук) ===== -->
        <record id="library_book_view_search" model="ir.ui.view">
            <field name="name">library.book.search</field>
            <field name="model">library.book</field>
            <field name="arch" type="xml">
                <search>
                    <field name="name"/>
                    <filter name="available" string="Доступні"
                            domain="[('available', '=', True)]"/>
                    <filter name="borrowed" string="Видані"
                            domain="[('state', '=', 'borrowed')]"/>
                    <group expand="0" string="Групувати">
                        <filter name="group_state" string="За статусом"
                                context="{'group_by': 'state'}"/>
                    </group>
                </search>
            </field>
        </record>

        <!-- ===== ACTION (Дія) ===== -->
        <record id="library_book_action" model="ir.actions.act_window">
            <field name="name">Книги</field>
            <field name="res_model">library.book</field>
            <field name="view_mode">tree,form</field>
            <field name="help" type="html">
                <p class="o_view_nocontent_smiling_face">
                    Створіть свою першу книгу!
                </p>
            </field>
        </record>

        <!-- ===== MENU (Меню) ===== -->
        <menuitem id="library_menu_root"
                  name="Бібліотека"
                  sequence="10"/>

        <menuitem id="library_book_menu"
                  name="Книги"
                  parent="library_menu_root"
                  action="library_book_action"
                  sequence="10"/>

    </data>
</odoo>
